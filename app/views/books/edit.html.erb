
<div class="container">
  <div class="low">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
<% if @book.errors.any? %>
  <div id="error_explanation">
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= pluralize(@book.errors.count, "error prohibited this obj from being saved:") %>
        <br><%= message %>
        </li>
      <% end %>
    </ul>
  </div>
<% end %>
<h1>Editing Book</h1>
<%= form_with model: @book, local:true do |f| %>
  <p>Title</p>
  <%= f.text_field :title %>
  <p>Opinion</p>
  <%= f.text_area :body %>
  <br>
  <%= f.submit 'Update Book',class: "btn btn-sm btn-success"%>
<% end %>

